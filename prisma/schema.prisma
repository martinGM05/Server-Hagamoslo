generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Roles{
  id Int @id @default(autoincrement())
  rol String
  Usuarios Usuario[]
}

model Usuario{
  id Int @id @default(autoincrement())
  nombre String
  correo String @unique
  contrasena String
  urlFoto String
  numero String
  localizacion String
  descripcion String?
  idRol Int
  Rol Roles @relation(fields: [idRol], references: [id])
  // comentarios Comentario[]
}

